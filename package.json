{
  "name": "ghostpad",
  "version": "1.0.0",
  "description": "Anonymous Token Launching Platform",
  "main": "truffle-config.js",
  "engines": {
    "node": ">=16.15.1"
  },
  "directories": {
    "test": "test"
  },
  "scripts": {
    "test": "forge test",
    "test:vitest": "NODE_OPTIONS=--experimental-vm-modules vitest run",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules vitest",
    "test:ui": "NODE_OPTIONS=--experimental-vm-modules vitest --ui",
    "test:coverage": "NODE_OPTIONS=--experimental-vm-modules vitest run --coverage",
    "compile": "forge build && yarn generate-all-types",
    "deploy": "forge script",
    "coverage": "forge coverage",
    "anvil": "anvil",
    "format": "forge fmt",
    "gas-report": "forge test --gas-report",
    "typechain": "typechain --target ethers-v6 --out-dir typechain 'out/GhostPad.sol/GhostPad.json' 'out/TokenTemplate.sol/TokenTemplate.json' 'out/Tornado.sol/Tornado.json' 'out/UniswapHandler.sol/UniswapHandler.json' 'out/Hasher.sol/Hasher.json' 'out/MetadataVerifier.sol/MetadataVerifier.json' 'out/Verifier.sol/Verifier.json' 'out/MerkleTreeWithHistoryMock.sol/MerkleTreeWithHistoryMock.json'",
    "setup-type-dirs": "node scripts/setup-type-dirs.js",
    "generate-all-types": "yarn setup-type-dirs && yarn typechain",
    "test:vitest:fresh": "chmod +x scripts/reset-anvil.sh && ./scripts/reset-anvil.sh && NODE_OPTIONS=--experimental-vm-modules vitest run",
    "test:vitest:reset": "chmod +x scripts/reset-anvil.sh && ./scripts/reset-anvil.sh && NODE_OPTIONS=--experimental-vm-modules vitest"
  },
  "keywords": [
    "ethereum",
    "tornado",
    "zksnark",
    "privacy",
    "token",
    "memecoin"
  ],
  "author": "GhostPad Team",
  "license": "MIT",
  "dependencies": {
    "@openzeppelin/contracts": "^3.4.0",
    "@openzeppelin/contracts-upgradeable": "^3.4.0",
    "ethers": "^6.13.5"
  },
  "devDependencies": {
    "@openzeppelin/test-helpers": "^0.5.16",
    "@truffle/hdwallet-provider": "^2.1.15",
    "@typechain/ethers-v5": "^11.1.2",
    "@typechain/ethers-v6": "^0.5.0",
    "@types/chai": "^4.3.6",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.5.7",
    "@vitest/coverage-c8": "^0.33.0",
    "@vitest/ui": "^3.0.7",
    "c8": "^10.1.3",
    "chai": "^4.3.7",
    "circomlib": "^0.5.5",
    "dotenv": "^16.0.3",
    "ethereum-abi-types-generator": "^1.3.4",
    "solidity-coverage": "^0.8.2",
    "truffle": "^5.7.9",
    "truffle-plugin-verify": "^0.6.2",
    "ts-node": "^10.9.1",
    "typechain": "^8.3.1",
    "typescript": "^5.2.2",
    "vitest": "^3.0.7"
  }
}
